{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./config/*"],
      "@start/*": ["./start/*"],
      "@bin/*": ["./bin/*"],
      "@database/*": ["./database/*"],
      "@repositories/*": ["./app/repositories/*"],
      "@services/*": ["./app/services/*"],
      "@controllers/*": ["./app/controllers/*"],
      "@factories/*": ["./app/factories/*"],
      "@validators/*": ["./app/validators/*"],
      "@dto/*": ["./app/dto/*"],
      "@util/*": ["./app/util/*"]
    },
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["app"]
  },
  "include": ["app/**/*", "./config/**/*", "./start/**/*", "./bin/**/*"]
}
