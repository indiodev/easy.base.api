{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@config/*": ["./config/*"],
      "@start/*": ["./start/*"],
      "@bin/*": ["./bin/*"]
    },		
		"rootDirs": ["app"],
		"target": "ES2022",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true                            /* Skip type checking all .d.ts files. */
  },
  "include": ["app/**/*", "./config/**/*", "./start/**/*", "./bin/**/*"],
}
